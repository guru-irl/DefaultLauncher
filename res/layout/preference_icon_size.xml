<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">

    <TextView
        android:id="@android:id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        android:textColor="?attr/colorOnSurface" />

    <TextView
        android:id="@android:id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="?attr/textAppearanceBodyMedium"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/size_toggle_group"
        style="@style/Widget.Material3.MaterialButtonGroup.Connected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:singleSelection="true"
        app:selectionRequired="false">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_size_s"
            style="@style/HomeSettings.ConnectedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="S"
            android:tag="0.8" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_size_m"
            style="@style/HomeSettings.ConnectedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="M"
            android:tag="0.863" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_size_l"
            style="@style/HomeSettings.ConnectedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L"
            android:tag="0.92" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_size_xl"
            style="@style/HomeSettings.ConnectedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="XL"
            android:tag="1.0" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_size_custom"
            style="@style/HomeSettings.ConnectedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:icon="@drawable/ic_star_custom"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

</LinearLayout>
