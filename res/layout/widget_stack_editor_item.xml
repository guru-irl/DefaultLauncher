<?xml version="1.0" encoding="utf-8"?>
<!--
     M3 two-line list item for the widget stack editor.
     Leading: widget preview thumbnail (56x56 rounded) with app icon badge.
     Content: widget label (headline) + app name (supporting).
     Trailing: drag handle (start) and remove button (end).
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:minHeight="88dp"
    android:paddingStart="4dp"
    android:paddingEnd="12dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@android:color/transparent">

    <!-- Drag handle -->
    <ImageView
        android:id="@+id/widget_stack_editor_drag_handle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_drag_handle"
        android:contentDescription="@string/widget_stack_drag_handle"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:importantForAccessibility="yes" />

    <!-- Leading: widget preview with app icon badge -->
    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="4dp">

        <!-- Widget preview thumbnail -->
        <ImageView
            android:id="@+id/widget_stack_editor_preview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_preview_rounded"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_widget" />

        <!-- App icon badge (bottom-end corner) -->
        <ImageView
            android:id="@+id/widget_stack_editor_app_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="-2dp"
            android:layout_marginBottom="-2dp"
            android:padding="2dp"
            android:background="@drawable/bg_icon_badge"
            android:scaleType="centerInside" />

    </FrameLayout>

    <!-- Text content -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <!-- Headline: widget label -->
        <TextView
            android:id="@+id/widget_stack_editor_widget_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/materialColorOnSurface"
            android:singleLine="true"
            android:ellipsize="end"
            tools:text="At a Glance" />

        <!-- Supporting: app name -->
        <TextView
            android:id="@+id/widget_stack_editor_app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/materialColorOnSurfaceVariant"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            tools:text="Google" />

    </LinearLayout>

    <!-- Remove button -->
    <ImageButton
        android:id="@+id/widget_stack_editor_remove"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="12dp"
        android:src="@drawable/ic_remove_no_shadow"
        android:contentDescription="@string/widget_stack_remove_widget"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:tint="@color/materialColorOnSurfaceVariant" />

</LinearLayout>
